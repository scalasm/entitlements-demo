# Accounts and organization

enum AccountType {
    DISTRICT
    SCHOOL
    CLASS
    GROUP
    INDIVIDUAL
}

type Account {
    id: ID!
    name: String!
    type: AccountType!
    relationships: [AccountRelationship]!
}

enum RelationshipType {
    HAS,
    ENROLLED_IN,
    TEACHES
}

type AccountRelationship {
    id: ID!
    type: RelationshipType!
    source: Account!
    target: Account!
}

input AccountInput {
    name: String
    type: AccountType
}

type Query {
    accounts(criteria: AccountInput): [Account]!
    account(id: ID!): Account

    features: [Feature!]!
    feature(id: ID!): Feature

    products: [Product!]!
    product(id: ID!): Product

    programs: [Program!]!
    program(code: ID): Program

    productBundles: [ProductBundle!]!
    productBundle(id: ID): ProductBundle

    productMemberships(criteria: ProductMembershipInput): [ProductMembership!]!
}

# Products
type Feature {
    id: ID!
    name: String!
}

type Product {
    id: ID!
    name: String!
    features: [Feature!]!
}

type Program {
    code: ID!
    name: String!
}

type ProductBundle {
    id: ID!
    name: String!
    description: String!

    productMemberships: [ProductMembership!]!
}

# This is just JPA detail, should not be mapped here because of the DTO
type ProductMembershipId {
    product: Product!
    program: Program!
    productBundle: ProductBundle!    
}

type ProductMembership {
    id: ProductMembershipId!
}

input ProductMembershipInput {
    productId: String
    programCode: String
    productBundleId: String
}
